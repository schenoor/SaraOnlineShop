
@{
    ViewBag.Title = "Order Succeeded!";    
    var emailNotSetUp = ViewData["NoEmail"] != null;
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Order Succeeded</h1>

<ol id="orderProcess">
    <li><span class="step-number">1</span>Choose Item</li>
    <li><span class="step-number">2</span>Details &amp; Submit</li>
    <li class="current"><span class="step-number">3</span>Receipt</li>
</ol>



@if (ViewBag.exception != null)
{
    <h2>Error Occured!</h2>
    <div class="message info">
        <h3>There was an error and your order could not be processed at this time</h3>
        <p>Error Detail: @ViewBag.exception</p>
    </div>
}
else if (emailNotSetUp)
{
    <div class="message info">
        <h2>Please set up Mail!</h2>
        <p>Please set your Gmail Username, Password, and From Address in OrderController.cs to send mail</p>
    </div>
}
else
{
    <h2>Order Confirmation</h2>
    <div class="message order-success">
        <h2>Thank you for your order!</h2>
        <p>We are processing your order and have sent a confirmation email. Thank you for your business and enjoy!</p>
    </div>
}

